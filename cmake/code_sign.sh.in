#!/bin/bash
for f in ${APPS}/Contents/MacOS/*.dylib
do
    /usr/bin/codesign --force --verify --verbose --sign "${CUBICSDR_CERT}" $f
done
for f in ${APPS}/Contents/MacOS/modules/*.so
do
    /usr/bin/codesign --force --verify --verbose --sign "${CUBICSDR_CERT}" $f
done

/usr/bin/codesign --force --verify --verbose --sign "${CUBICSDR_CERT}" ${APPS}
